        p[gid].col.g = max(0, p[gid].drg.g - 0.1);
        p[gid].col.b = max(0, p[gid].drg.b - 0.1);
    }
    else{
        p[gid].drg.x = texColor;
    }

    if(time == -1){
        p[gid].pos.xy = mouse + p[gid].drg.yz;
        p[gid].vel.xy = p[gid].acc.xy;
        p[gid].drg.x = -1;
        p[gid].col = vec4(1,1,1,1);
    }
}